@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="container mt-5">
    <div class="bg-light-blue p-4 rounded">
        <h1 class="display-4 text-center">Expenses</h1>
        <hr />
        <h3 class="text-center">Total expenses $@ViewBag.Expenses</h3>
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Value</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var expense in Model)
                    {
                        <tr>
                            <td>@expense.Id</td>
                            <td>@expense.Value</td>
                            <td>@expense.Description</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="CreateEditExpense" asp-route-id="@expense.Id" title="Edit this expense">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="DeleteExpense" asp-route-id="@expense.Id" title="Delete this expense">Delete</a>
                                <a class="btn btn-success btn-sm" asp-controller="Home" asp-action="CreateEditExpense" title="Create a new expense">Create</a>
                                <a class="btn btn-warning btn-sm" asp-action="Scramble" asp-route-id="@expense.Id" title="Scramble this expense">Scramble</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>